{
  "extends": "stylelint-config-recommended",
  "rules": {
    "media-query-no-invalid": null,
    "at-rule-no-unknown": [
      true,
      {
        "ignoreAtRules": [
          "tailwind",
          "apply",
          "layer",
          "variants",
          "responsive",
          "screen",
          "each",
          "for",
          "if",
          "else",
          "import",
          "define-mixin",
          "mixin"
        ]
      }
    ],
    "block-no-empty": null,
    "unit-no-unknown": [
      true,
      {
        "ignoreUnits": ["xl"]
      }
    ],
    "function-no-unknown": [
      true,
      {
        "ignoreFunctions": ["theme"]
      }
    ],
    "no-descending-specificity": null
  }
}